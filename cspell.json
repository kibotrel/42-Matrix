{
  "dictionaryDefinitions": [
    {
      "name": "matrix",
      "path": "tools/dictionary.txt",
      "addWords": true
    }
  ],
  "dictionaries": [
    "matrix",
    "bash",
    "docker",
    "networking-terms",
    "node",
    "npm",
    "en-gb",
    "fr-fr"
